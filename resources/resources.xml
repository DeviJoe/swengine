<?xml version="1.0" encoding="utf-8"?>
<resources>
	<resource type="texture" id="simple_texture" source="../resources/textures/pbr/brick/albedo.tga">
		<type>2d</type>
		<format>rgb8</format>
		<generate_mipmaps>true</generate_mipmaps>
		<min_filter>linear_mipmap_linear</min_filter>
		<mag_filter>linear</mag_filter>
		<wrap u="repeat" v="repeat"></wrap>
	</resource>
	
	<resource type="mesh" id="simple_mesh" source="test.mesh">
	</resource>

	<resource type="shader" id="phong_vertex_shader" source="../resources/shaders/phong_vertex_shader.glsl" persistent="true" preload="true">
		<type>vertex</type>
	</resource>

	<resource type="shader" id="phong_fragment_shader" source="../resources/shaders/phong_fragment_shader.glsl" preload="true" persistent="true">
		<type>fragment</type>
	</resource>

	<resource type="texture" id="tex_main_menu_background" source="../resources/textures/gui/main_menu_bg.jpg">
		<type>2d</type>
		<format>rgb8</format>
		<generate_mipmaps>false</generate_mipmaps>
		<min_filter>linear</min_filter>
		<mag_filter>linear</mag_filter>
	</resource>

	<resource type="texture" id="tex_main_menu_new_game" source="../resources/textures/gui/newgame_btn.png">
		<type>2d</type>
		<format>rgba8</format>
		<generate_mipmaps>false</generate_mipmaps>
		<min_filter>linear</min_filter>
		<mag_filter>linear</mag_filter>
	</resource>

	<resource type="texture" id="tex_main_menu_new_game_hover" source="../resources/textures/gui/newgame_btn_hover.png">
		<type>2d</type>
		<format>rgba8</format>
		<generate_mipmaps>false</generate_mipmaps>
		<min_filter>linear</min_filter>
		<mag_filter>linear</mag_filter>
	</resource>

	<resource type="texture" id="tex_main_menu_exit" source="../resources/textures/gui/exit_btn.png">
		<type>2d</type>
		<format>rgba8</format>
		<generate_mipmaps>false</generate_mipmaps>
		<min_filter>linear</min_filter>
		<mag_filter>linear</mag_filter>
	</resource>

	<resource type="texture" id="tex_main_menu_exit_hover" source="../resources/textures/gui/exit_btn_hover.png">
		<type>2d</type>
		<format>rgba8</format>
		<generate_mipmaps>false</generate_mipmaps>
		<min_filter>linear</min_filter>
		<mag_filter>linear</mag_filter>
	</resource>

	<resource type="material" id="phong_material">
		<shaders_pipeline>
			<vertex id="phong_vertex_shader" />
			<fragment id="phong_fragment_shader" />
		</shaders_pipeline>
		
		<gpu_state>
			<blending mode="alpha_one_minus_alpha" />
			<depth write="enabled" testMode="less" />
			<face_culling mode="back" />
			<polygon_filling mode="fill" />
		</gpu_state>
		
		<params>
			<param shader="fragment" name="tex" type="texture" id="simple_texture" slot="0" />
		</params>
	</resource>

</resources>
